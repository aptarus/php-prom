{
    "name": "aptarus/prom-client-php",
    "type": "library",
    "description": "Prometheus client library for PHP.",
    "keywords": [
        "aptarus",
        "prometheus",
        "promClientPhp"
    ],
    "homepage": "https://github.com/aptarus/promClientPhp",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Lyda",
            "email": "kevin.lyda@aptarus.com",
            "homepage": "https://www.aptarus.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.5|~7.0",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "Aptarus\\PromClient\\": "src"
        },
        "files": [
            "src/Factories.php",
            "src/Utility.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Aptarus\\PromClient\\": "src",
            "Aptarus\\PromClientTests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
